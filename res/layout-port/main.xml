<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
   	<LinearLayout android:id="@+id/LinearLayout02" android:layout_height="wrap_content" android:layout_width="fill_parent">
   		<Spinner android:id="@+id/instrument" android:entries="@array/instrument" android:layout_height="wrap_content" android:prompt="@string/select_instrument" android:saveEnabled="true" android:layout_width="wrap_content"/>
   		<Spinner android:id="@+id/transposer" android:layout_height="wrap_content" android:layout_width="wrap_content" android:entries="@array/transposition_steps" android:saveEnabled="true"/>
	</LinearLayout>
    
	<LinearLayout android:id="@+id/LinearLayout01" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
		<Spinner android:id="@+id/root" android:entries="@array/root" android:addStatesFromChildren="false" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="fill_parent" android:saveEnabled="true"/>
		<Spinner android:id="@+id/triad" android:entries="@array/triad" android:addStatesFromChildren="false" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="1" android:saveEnabled="true"/>
		<Spinner android:id="@+id/extra" android:entries="@array/extra" android:addStatesFromChildren="false" android:layout_height="wrap_content" android:saveEnabled="true" android:layout_weight="1" android:layout_width="fill_parent"/>
	</LinearLayout>
	
	
	
	<LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical">
	<TextView android:text="-" android:id="@+id/variant" android:layout_width="fill_parent" android:layout_height="wrap_content"/> 
		<de.wertarbyte.chorddroid.ChordView
			android:id="@+id/chordview"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"/>
	</LinearLayout>
	



</LinearLayout>
