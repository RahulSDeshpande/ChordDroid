<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
   <Spinner android:id="@+id/instrument" android:entries="@array/instrument" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
    
	<LinearLayout android:id="@+id/LinearLayout01" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
		<Spinner android:id="@+id/root" android:entries="@array/root" android:layout_width="wrap_content" android:addStatesFromChildren="false" android:layout_height="fill_parent"/>
		<Spinner android:id="@+id/scale" android:entries="@array/scale" android:layout_width="wrap_content" android:addStatesFromChildren="false" android:layout_height="fill_parent"/>
		<Spinner android:id="@+id/extra" android:entries="@array/extra" android:layout_width="wrap_content" android:addStatesFromChildren="false" android:layout_height="fill_parent"/>
	</LinearLayout>
	
	<TextView android:id="@+id/chordname"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="FOO"/>
	
	<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent"> 
		<de.wertarbyte.chorddroid.ChordView
			android:id="@+id/chordview"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"/>
	</LinearLayout>

</LinearLayout>
